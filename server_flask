from flask import Flask, request, make_response

app = Flask(__name__)

@app.route('/')
def home():
    
    response = make_response("OlÃ¡, visitante! ğŸ‘‹")

    # parametros de cabeÃ§alho personalizados
    response.headers["Content-Type"] = "text/plain; charset=utf-8"
    response.headers["Cache-Control"] = "no-cache"  # nÃ£o guardar cache
    response.headers["X-App-Author"] = "ChatGPT Demo"  # cabeÃ§alho personalizado

    # Definindo um cookie
    response.set_cookie("user_id", "12345", httponly=True)

    return response

@app.route('/hello')
def hello():
    nome = request.args.get("nome", "desconhecido")
    return f"OlÃ¡, {nome}! ğŸ‘‹"

if __name__ == '__main__':
    app.run(debug=True)
